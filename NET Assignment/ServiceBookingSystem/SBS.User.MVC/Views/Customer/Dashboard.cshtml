
@{
    ViewBag.Title = "Dashboard";
}

<h2 style="text-align:center; font-family:'Bookman Old Style'">Dashboard</h2>
<br />

@if (ViewBag.Message != null)
{
    <div id="nofication" style="background:@ViewBag.Color" class="notification">
        @ViewBag.Message
    </div>
}
<div class="row">
    <div class="col-md-12 text-center">
        <div class="user-card">
            <div>
                <h4 style="font-family:'Agency FB'; font-weight:bolder; font-size:28px; color:darkgoldenrod">ServiceBookingApp</h4>
                <hr />
            </div>
            <div class="user-text">
                Welcome Back!
            </div>
            <div class="user-details">
                <p><strong>Name :</strong> @Session["userName"]</p>
                <p><strong>Email :</strong>  @Session["userEmail"]</p>
            </div>
        </div>
    </div>
</div>

@section scripts
    {
    <script>
        setTimeout(function () {
            $('#nofication').fadeOut('fast');
        }, 4000);
    </script>
}