@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Dashboard";
}

<div class="text-center">
    <h1>Welcome @HttpContextAccessor.HttpContext.Session.GetString("user")</h1>
    <div class="container" style="margin:100px">
        <div class="card-deck-wrapper">
            <div class="card-deck">
                <div class="card">
                    <div class="card-block">
                        <h4 class="card-title">Add Employee</h4>
                        <a class="btn btn-success" asp-area="" asp-controller="Employee" asp-action="AddEmployee">Add Employee</a>
                    </div>
                </div>
                
                <div class="card">
                    <div class="card-block">
                        <h4 class="card-title">Employee List</h4>
                        <a class="btn btn-warning" asp-area="" asp-controller="Employee" asp-action="EmployeeList">Employee List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
